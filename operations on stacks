//operations on stack using arrays
//last in first out
#include<stdio.h>
#include<stdlib.h>
#define size 4
int top=-1,stack[size];
void main()
{
    int choice,top=0;
    while(choice!=3)
    {
        printf("1-push\n2-pop\n3-display\n");
        printf("Enter choice");
        scanf("%d",&choice);
        switch(choice)
        {
            case 1: push();
                    break;
            case 2: pop();
                    break;
            case 3: display();
                    break;
            default: printf("Enter valid choice\n");
        }
    }
}

void push()
{
    if(top==size-1)
    {
        printf("overflow");
    }
    else
    {
        int ele;
        printf("Enter the element\n");
        scanf("%d",&ele);
        top++;
        stack[top]=ele;
    }
}

void pop()
{
    if(top==-1)
    {
        printf("Underflow\n");
    }
    else
    {
        int ele;
        stack[top]=ele;
        printf("Element popped is %d\n",ele);
        top--;
    }
}

void display()
{
    printf("Elements in the stack are:\n");
    for(top=0;top<size;top++)
    {
        printf("%d\n",stack[top]);
    }
}
output:
Enter choice1
Enter the element
12
